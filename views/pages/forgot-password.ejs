<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', { title: 'Zave - Forgot Password' }) %>
  </head>

  <body>
    <%- include('../partials/header', { items: 'sign-up', user }) %>

    <main class="forgot-password-section">
      <div class="forgot-password-section__wrapper">
        <h1>Password Reset</h1>

        <form
          id="forgot-password-form"
          class="forgot-password-section__wrapper__form"
        >
          <div class="form-group-2">
            <div class="form-group">
              <label for="email">Email address</label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="email@example.com"
                required
              />
            </div>
          </div>

          <div class="form-group form-group-full-width">
            <button type="submit" class="btn btn--primary btn--rounded">
              Reset Password
            </button>
          </div>
        </form>

        <p class="forgot-password-section__wrapper__sub">
          Back to
          <a href="/login">login</a>
        </p>
      </div>
    </main>

    <div class="footer-divider"></div>
    <%- include('../partials/footer') %>
  </body>
</html>
